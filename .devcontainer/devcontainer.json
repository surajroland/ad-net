{
  "name": "ADNet Development",
  "dockerComposeFile": [
    "../docker/docker-compose.yml"
  ],
  "env": {
    "COMPOSE_PROJECT_DIR": ".."
  },
  "service": "dev",
  "workspaceFolder": "/workspace",
  "overrideCommand": false,
  "containerEnv": {
    "PYTHONPATH": "/workspace/src",
    "WANDB_CONSOLE": "off",
    "WANDB_API_KEY": "${localEnv:WANDB_API_KEY}",
    "HF_TOKEN": "${localEnv:HF_TOKEN}",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-extensionpack",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.mypy-type-checker",
        "ms-python.isort",
        "ms-python.flake8",
        "ms-python.debugpy",
        "charliermarsh.ruff",
        "github.copilot",
        "github.copilot-chat",
        "njpwerner.autodocstring",
        "ryanluker.vscode-coverage-gutters",
        "formulahendry.code-runner",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.tensorboard",
        "ms-toolsai.vscode-ai",
        "ms-toolsai.jupyter-keymap",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "github.vscode-pull-request-github",
        "github.vscode-github-actions",
        "ms-vscode.vscode-github-issue-notebooks",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "ms-vscode.makefile-tools",
        "spencerwmiles.vscode-task-buttons",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "ms-vscode.live-server",
        "shd101wyy.markdown-preview-enhanced",
        "mechatroner.rainbow-csv",
        "quarto.quarto",
        "donjayamanne.python-environment-manager",
        "zhuangtongfa.material-theme",
        "pkief.material-icon-theme",
        "gruntfuggly.todo-tree",
        "wayou.vscode-todo-highlight",
        "ms-vscode.vscode-speech",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
      ],
      "settings": {
        "workbench.colorTheme": "One Dark Pro Flat",
        "workbench.iconTheme": "material-icon-theme",
        "workbench.startupEditor": "readme",
        "workbench.sideBar.location": "left",
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.fontFamily": "'Fira Code', 'Courier New', monospace",
        "terminal.integrated.fontSize": 14,
        "terminal.integrated.copyOnSelection": true,
        "terminal.integrated.rightClickBehavior": "paste",
        "python.defaultInterpreterPath": "/usr/bin/python3.12",
        "python.formatting.provider": "none",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": false,
        "python.linting.mypyEnabled": true,
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.autoTestDiscoverOnSaveEnabled": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll.ruff": "explicit"
          }
        },
        "ruff.enable": true,
        "ruff.organizeImports": true,
        "jupyter.askForKernelRestart": false,
        "jupyter.interactiveWindow.creationMode": "perFile",
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        "jupyter.jupyterServerType": "local",
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "git.autofetch": true,
        "git-graph.repository.onLoad.showCheckedOutBranch": true,
        "git-graph.graph.colours": [
          "#0085d1",
          "#d73a49",
          "#28a745",
          "#ffd33d",
          "#f66a0a",
          "#6f42c1",
          "#e1e4e8"
        ],
        "gitlens.currentLine.enabled": false,
        "gitlens.codeLens.enabled": false,
        "docker.showStartPage": false,
        "docker.dockerComposeBuild": true,
        "docker.dockerComposeDetached": true,
        "files.associations": {
          "*.yaml": "yaml",
          "*.yml": "yaml",
          ".hydra/**/*.yaml": "yaml",
          "*.toml": "toml",
          "Dockerfile*": "dockerfile",
          "*.cu": "cuda-cpp",
          "*.cuh": "cuda-cpp"
        },
        "editor.fontSize": 14,
        "editor.fontLigatures": true,
        "editor.rulers": [
          88,
          120
        ],
        "editor.wordWrap": "on",
        "search.exclude": {
          "**/outputs": true,
          "**/multirun": true,
          "**/.hydra": true,
          "**/wandb": true,
          "**/__pycache__": true,
          "**/.pytest_cache": true,
          "**/node_modules": true,
          "**/.mypy_cache": true,
          "**/cpp_engine/build": true,
          "**/data/raw": true,
          "**/data/processed": true
        },
        "cmake.configureOnOpen": false,
        "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
        "tensorBoard.logDirectory": "${workspaceFolder}/outputs/logs",
        "task.showDecorations": true,
        "task.quickOpen.history": 10,
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/*/**": true,
          "**/.mypy_cache/**": true,
          "**/__pycache__/**": true
        }
      }
    }
  },
  "forwardPorts": [
    8888,
    6006,
    8097,
    8000,
    7860,
    8080
  ],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify"
    },
    "6006": {
      "label": "TensorBoard",
      "onAutoForward": "ignore"
    },
    "8097": {
      "label": "Wandb",
      "onAutoForward": "ignore"
    },
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "ignore"
    },
    "8080": {
      "label": "3D Visualization",
      "onAutoForward": "ignore"
    }
  },
  "initializeCommand": "echo '\ud83c\udfd7\ufe0f Initializing ADNet development environment...'",
  "onCreateCommand": "echo '\ud83d\udccb Creating development container...'",
  "postCreateCommand": [
    "bash",
    "-c",
    "git config --global --add safe.directory '*' && echo '\ud83d\ude80 Git safe directory configured' && echo '\ud83d\ude80 ADNet development environment ready!' && if command -v pre-commit >/dev/null 2>&1; then echo '\ud83d\udce6 Installing pre-commit hooks...' && pre-commit install --install-hooks; else echo '\u26a0\ufe0f pre-commit not found, skipping hooks installation'; fi && echo '\u2705 Environment setup complete!'"
  ],
  "postStartCommand": [
    "bash",
    "-c",
    "echo '\ud83d\udd25 Container started! Checking environment...' && which python3 && python3 --version && echo '\ud83d\udc0d Python available' && if command -v nvidia-smi >/dev/null 2>&1; then echo '\ud83c\udfae NVIDIA driver detected' && nvidia-smi --query-gpu=name --format=csv,noheader,nounits 2>/dev/null || echo 'GPU query failed'; else echo '\u26a0\ufe0f No NVIDIA driver found (expected in non-GPU environments)'; fi && if python3 -c 'import torch' 2>/dev/null; then echo '\ud83d\udd25 PyTorch available' && python3 -c 'import torch; print(f\"CUDA Available: {torch.cuda.is_available()}\")' 2>/dev/null || echo '\u26a0\ufe0f CUDA check deferred'; else echo '\u26a0\ufe0f PyTorch not yet available (may still be installing)'; fi && echo '\u2705 Environment check complete!'"
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.vscode,target=/workspace/.vscode,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.git,target=/workspace/.git,type=bind,consistency=cached"
  ],
  "privileged": false,
  "remoteUser": "root",
  "updateRemoteUserUID": false
}
